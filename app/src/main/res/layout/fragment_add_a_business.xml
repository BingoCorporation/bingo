<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/holo_green_dark"
            android:textSize="40sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llName"

        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginTop="15dp"
            android:text="Business Name : "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etPassword"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:backgroundTint="@color/holo_green_dark"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@color/holo_green_dark" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginTop="15dp"
            android:text="Business Adress : "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:backgroundTint="@color/holo_green_dark"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@color/holo_green_dark" />


    </LinearLayout>


        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llAdress"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_marginTop="15dp"
                android:text="Business Phone : "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:backgroundTint="@color/holo_green_dark"
                android:ems="10"
                 />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llPhone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_marginTop="15dp"
                android:text="Business Email : "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etBusinessEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:backgroundTint="@color/holo_green_dark"
                android:ems="10"
                />


        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnAddBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_green_dark"
        android:text="Add your business"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp" />


</RelativeLayout>
